<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.karandaev.retrolauncher.controller.EditRomController">

    <children>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>
            <Label text="%column.rom.name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" promptText="%prompt.enter.rom.name" GridPane.rowIndex="0"
                       GridPane.columnIndex="1"
                       GridPane.columnSpan="2" maxWidth="Infinity"
                       GridPane.hgrow="ALWAYS"/>

            <Label text="%column.path" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="pathField" promptText="%prompt.enter.rom.path" GridPane.rowIndex="1"
                       GridPane.columnIndex="1" maxWidth="Infinity"
                       GridPane.hgrow="ALWAYS"/>
            <Button fx:id="browseButton" text="%button.browse" GridPane.rowIndex="1" GridPane.columnIndex="2"/>

            <Label text="%column.consoles" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="consolesField" promptText="%prompt.enter.rom.consoles" GridPane.rowIndex="2"
                       GridPane.columnIndex="1" GridPane.columnSpan="2" maxWidth="Infinity"
                       GridPane.hgrow="ALWAYS"/>

            <Label text="%column.genres" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="genresField" promptText="%prompt.enter.rom.genres" GridPane.rowIndex="3"
                       GridPane.columnIndex="1" GridPane.columnSpan="2" maxWidth="Infinity"
                       GridPane.hgrow="ALWAYS"/>

            <Label text="%column.favorite" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <CheckBox fx:id="favoriteCheckBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <HBox spacing="10" GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.columnSpan="2"
                  alignment="CENTER_RIGHT"
                  maxWidth="Infinity"
                  GridPane.hgrow="ALWAYS">
                <Button fx:id="saveButton" text="%button.save"/>
                <Button fx:id="cancelButton" text="%button.cancel"/>
            </HBox>
        </GridPane>
        <TitledPane fx:id="launchParametersPane" text="%label.launch.parameters.per.emulator"
                    VBox.vgrow="ALWAYS" maxHeight="Infinity">
            <GridPane fx:id="launchParametersGrid" hgap="10" vgap="10" maxHeight="Infinity">
                <padding>
                    <Insets top="10" right="15" bottom="10" left="15"/>
                </padding>
                <columnConstraints>
                    <ColumnConstraints halignment="LEFT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
            </GridPane>
        </TitledPane>
    </children>
</VBox>
